{
  "name": "mern_shopping_list",
  "version": "1.0.0",
  "description": "Shopping list built with the MERN stack _",
  "main": "server.js",
  "scripts": {
    "client-install":"npm install --prefix cleint",
    "start": "node server.js",
    "server": "nodemon server.js",
    "client":"npm start --prefix client",
